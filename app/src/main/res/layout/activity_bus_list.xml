<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="705dp"
        tools:context=".BusListActivity">

    <ScrollView
            android:layout_width="392dp"
            android:layout_height="623dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/scrollView2" app:layout_constraintHorizontal_bias="0.333"
            app:layout_constraintTop_toBottomOf="@+id/view2">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/busListLayout">
        </LinearLayout>
    </ScrollView>
    <TextView
            android:text="Autobusų sąrašas"
            android:layout_width="326dp"
            android:layout_height="26dp"
            android:id="@+id/textView" android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:textSize="14sp"/>
    <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            tools:layout_editor_absoluteX="0dp" android:id="@+id/view2"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/textView"/>
</android.support.constraint.ConstraintLayout>