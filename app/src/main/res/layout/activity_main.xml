<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        tools:context=".MainActivity" android:layout_height="705dp">

    <TextView
            android:text="Kauno autobusų maršrutai"
            android:layout_width="389dp"
            android:layout_height="53dp"
            android:id="@+id/textView2" android:layout_marginTop="40dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:textAllCaps="true" android:textStyle="bold" tools:textSize="24sp" tools:textAlignment="center"
            tools:textColor="@android:color/black"/>
    <SearchView
            android:layout_width="350dp"
            android:layout_height="65dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            tools:background="@android:drawable/alert_light_frame" android:id="@+id/searchView2"
            tools:backgroundTint="?android:attr/searchWidgetCorpusItemBackground" android:iconifiedByDefault="false"
            app:layout_constraintHorizontal_bias="0.488" android:layout_marginTop="64dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView">
        <Button
                android:text="Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/button" android:layout_weight="1"/>
    </SearchView>
    <Button
            android:text="Visų autobusų sąrašas"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonBusList"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="80dp"
            app:layout_constraintTop_toBottomOf="@+id/button5"/>
    <Button
            android:text="Visų maršrutų sąrašas"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonRouteList"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonBusList"/>
    <Button
            android:text="Ieškoti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button5" android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/searchView2" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:id="@+id/errorText" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            tools:textColor="@android:color/holo_red_dark" android:layout_marginTop="48dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView"/>
    <ImageView
            android:layout_width="0dp"
            app:srcCompat="@drawable/ic_launcher_background"
            android:id="@+id/imageView" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_height="120dp"/>
</android.support.constraint.ConstraintLayout>